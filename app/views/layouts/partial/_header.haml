.navbar.internal
  .navbar-header
    %button.navbar-toggle.mt-28{"data-target" => ".navbar-collapse", "data-toggle" => "collapse", :type => "button"}
      %span.icon-bar
      %span.icon-bar
      %span.icon-bar
    .p-7.hidden-xs.hidden-sm.col-xs-4= link_to image_tag('logo-kmimos-blanco-04.png', class: "mt--14 img-logo"), root_url
    .p-7.hidden-md.hidden-lg.col-xs-4= link_to image_tag('logo-kmimos-blanco-04.png', class: "mt-0 img-logo"), root_url
    - if current_user
      %ul.nav.navbar-nav.mt-7.ml-56
      
        %li
          = link_to 'Mi Perfil', user_path(current_user), class: "not-underline white-text"
        %li
          = link_to 'Mis Reservas', bookings_path, class: "not-underline white-text"
  .collapse.navbar-collapse.pr-21
    %ul.nav.navbar-nav.mt-14
      - if current_provider
        %li.dropdown.mt-7.size-responsive
          %a.dropdown-toggle.text-muted{"data-toggle" => "dropdown", :href => "#"}
            Hola, #{current_provider.name}
          %ul#dropdown-menu.dropdown-menu
            %li= link_to 'Actualizar mi perfil'.html_safe, edit_provider_path(current_provider.id), class: "text-danger pl-14 pr-14 mb-14"
            %li= link_to 'Salir'.html_safe, destroy_provider_session_path, :method => :delete, class: "text-danger pl-56 pr-56"
        %li.hidden-lg.hidden-md
          %ul.list-group.m-0.pt-7.pl-0.list-movil-header
            %li.hidden-lg.hidden-md.hidden-sm.li-first
              = link_to 'Home', root_url, class: "not-underline log-in"
            %li.hidden-lg.hidden-md.hidden-sm
              = link_to 'Reservar', providers_path, class: "not-underline log-in"
            %li.list-group-item= link_to 'Actualizar mi perfil'.html_safe, edit_provider_path(current_provider)
            %li.list-group-item= link_to 'Cerrar Sesion'.html_safe, destroy_provider_session_path, :method => :delete, class: "text-danger"
      - elsif current_user
        %li.dropdown.mt-7.size-responsive
          %a.dropdown-toggle.text-muted{"data-toggle" => "dropdown", :href => "#"}
            Hola, #{current_user.first_name}
          %ul#dropdown-menu.dropdown-menu
            %li= link_to 'Actualizar mi perfil'.html_safe, user_path(current_user), class: "text-danger pl-14 pr-14 mb-14"
            %li= link_to 'Salir'.html_safe, destroy_user_session_path, :method => :delete, class: "text-danger pl-56 pr-56"
        %li.hidden-lg.hidden-md
          %ul.list-group.m-0.pt-7.pl-0.list-movil-header
            %li.hidden-lg.hidden-md.hidden-sm.li-first
              = link_to 'Home', root_url, class: "not-underline log-in"
            %li.hidden-lg.hidden-md.hidden-sm
              = link_to 'Reservar', providers_path, class: "not-underline log-in"
            %li.list-group-item= link_to 'Actualizar mi perfil'.html_safe, user_path(current_user)
            %li.list-group-item= link_to 'Cerrar Sesion'.html_safe, destroy_user_session_path, :method => :delete, class: "text-danger"
      - else
        %li
          .dropdown
            %a.dropdown-toggle.text-header.btn.pv-7(data-toggle="dropdown")
              %span.h5.book.pr-14.ls-md Iniciar Sesión
              %span.caret
            %ul(class="dropdown-menu")
              %li
                %a{:href => new_user_session_path}
                  %span.h5.btn Iniciar sesión como Usuario
              %li
                %a{:href => new_provider_session_path}
                  %span.h5.btn Iniciar sesión como Cuidador 
        %li.active 
          = link_to 'Ser cuidador', new_provider_registration_path, class: "not-underline sign-up"
        %li.active 
          = link_to 'Registrarme', new_user_registration_path, class: "not-underline sign-up"
         
  / /.nav-collapse