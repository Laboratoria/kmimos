%header.site-menu
  #menu-vistas.vistas.hidden-xs.container-fluid.text-center
    .header-center.col-md-6.text-right.pull-right
      .collapse.navbar-collapse.pr-21
        %ul.nav.navbar-nav.mt-14
          - if current_provider
            %li
              .dropdown 
                %a.dropdown-toggle.text-header.btn.pv-7(data-toggle="dropdown")
                  Hola, #{current_provider.name}
                %ul#dropdown-menu.dropdown-menu
                  %li= link_to 'Actualizar mi perfil'.html_safe, edit_provider_path(current_provider) 
                  %li= link_to 'Salir'.html_safe, destroy_provider_session_path, :method => :delete 
          - elsif current_user
            %li
              .dropdown 
                %a.dropdown-toggle.text-header.btn.pv-7(data-toggle="dropdown")
                  %span.h5.book.pr-14.ls-md Hola, #{current_user.first_name }
                %ul.dropdown-menu
                  %li= link_to 'Mi perfil'.html_safe, user_path(current_user) 
                  %li= link_to 'Mis Reservas'.html_safe, bookings_path 
                  %li= link_to 'Salir'.html_safe, destroy_user_session_path, :method => :delete 
          - else
            %li
              .dropdown
                %a.dropdown-toggle.text-header.btn.pv-7(data-toggle="dropdown")
                  %span.h5.book.pr-14.ls-md Iniciar Sesión
                  %span.caret
                %ul.dropdown-menu
                  %li
                    %a{:href => new_user_session_path}
                      %span.h5.btn Iniciar sesión como Cliente
                  %li
                    %a{:href => new_provider_session_path}
                      %span.h5.btn Iniciar sesión como Cuidador
            %li
              = link_to 'Registrarme', new_user_registration_path, class: "not-underline text-header "
            %li.active
              = link_to 'Quiero ser cuidador', new_provider_registration_path, class: "btn not-underline sign-up"
