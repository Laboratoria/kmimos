            <% total = 0 %>
            <% @booking.booked_pets.each do |booked_pet| %>
              <% diff = (@booking.end_date - @booking.start_date).to_i  %>
              <% amount = AdditionalService.get_pet_rate(booked_pet.pet, @booking.provider_id) rescue 0 %>
