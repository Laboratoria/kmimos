<section id="home-filters"> 
  <div class="container-fluid pr-0">
   <div class="navbar p-7">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <div class=" p-7 hidden-xs hidden-sm col-xs-4">
          <%= link_to image_tag('logo-kmimos-blanco-04.png', class: "mt--14 img-logo"), root_url %>
        </div>
        <div class=" p-7 hidden-md hidden-lg col-xs-4">
          <%= link_to image_tag('logo-kmimos-blanco-04.png', class: "mt-0 img-logo"), root_url %>
        </div>
      </div>
      <div class="collapse navbar-collapse pr-21">
        <ul class="nav navbar-nav pull-right mt-14">
          <% if current_provider %>
            <li class="dropdown mt-7">
              <a href="#" class="dropdown-toggle text-muted" data-toggle="dropdown">Hola, <%= current_provider.name %></a>
              <ul class="dropdown-menu" id="dropdown-menu">
                <li><%= link_to 'Actualizar mi perfil'.html_safe, edit_provider_path(current_provider), class: "text-danger pl-14 pr-14 mb-14" %></li>
                <li><%= link_to 'Salir'.html_safe, salir_path, :method => :delete, class: "text-danger pl-56 pr-56" %></li>
              </ul>
            </li>
            <li class="hidden-lg hidden-md">
              <ul class="list-group m-0 pt-7">
                <li class="list-group-item"><%= link_to 'Actualizar mi perfil'.html_safe, edit_provider_path(current_provider) %></li>
                <li class="list-group-item"><%= link_to 'Salir'.html_safe, salir_path, :method => :delete, class: "text-danger" %></li>
              </ul>
            </li>
          <% else %>    
          <li class="active hidden-sm hidden-xs mr-7">
            <%= link_to 'Iniciar sesión', new_providers_session_path, class: "not-underline log-in" %>
          </li>
          <li class="active hidden-sm hidden-xs">
            <%= link_to 'Ser cuidador', new_provider_path, class: "not-underline sign-up" %>
          </li>
          <li class="hidden-lg hidden-md">
            <%= form_tag providers_sessions_path, :class => "form-inline mb-0 user-login-header-form" do %>
            <div class="form-group mr-7">
              <label class="hidden-lg hidden-md hidden-sm text-muted">Ingreso de proveedores</label>
              <%= email_field_tag :email, params[:email], :autofocus => true, :class => "form-control input-sm", :placeholder => "Correo electrónico" %>
            </div>
            <div class="form-group mr-7">
              <%= password_field_tag :password, nil, class: "form-control input-sm", :placeholder => "Contraseña" %>
            </div>
            <div class="form-group text-center">
              <%= submit_tag "Ingresa", id: "user_login_button", class: "btn btn-info btn-sm" %>
            </div>
          <% end %>
          </li>
          <% end %>   
        </ul>
      </div>
      <!--/.nav-collapse -->
    </div>
   
    <div class="container-sm">
      <div class="row text-center text-white pt-70">
        <h1 class="text-h1 mb-0 light">Deja a tu mascota en<br> buenas manos</h1>
      </div>
    </div>
    <div class="container-fluid">
      <div class="row bg-check">
        <h4 class="text-h3 lead mt-0 text-center text-white mb-0">Ellos también se merecen unas vacaciones, elige donde y cuando:</h4>
        <div class="col-sm-1"></div>
        <div class="col-sm-10 pl-63">
          <%= search_form_for @search do |f| %>
          <div class="row header-form">
            <%= f.collection_select :locations_id_eq, Location.order(:name), :id, :name,{include_blank:"Elegir Municipio"}, {class:"borderless form-location-nav"} %> 
     
            
            <div class="col-sm-3">
              <% if session[:start_date].nil? %>
                <%= text_field_tag(:start_date, nil, class: 'form-control form-check', placeholder: 'DD/MM/AAAA') %>
              <% else %>
                <%= text_field_tag(:start_date, session[:start_date].strftime("%d/%m/%Y"), class: 'datepicker form-control form-check', placeholder: 'DD/MM/AAAA') %>
              <% end %>
            </div>
            <div class="col-sm-3">
              <% if session[:end_date].nil? %>
                <%= text_field_tag(:end_date, nil, class: 'form-control form-check', placeholder: 'DD/MM/AAAA') %>
              <% else %>
                <%= text_field_tag(:end_date, session[:end_date].strftime("%d/%m/%Y"), class: 'datepicker form-control form-check', placeholder: 'DD/MM/AAAA') %>
              <% end %>
            </div>
            <%= f.submit "Buscar", class:"ml-7 borderless form-search" %>
            <% end %>
          </div>
        </div>
        <div class="col-sm-1"></div>
      </div>
    </div>
  </div>
</section>
