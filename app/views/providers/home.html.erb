<section id="home-filters"> 
  <div class="container-fluid p-14">
   <div class="navbar p-7">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <div class=" p-7 hidden-xs hidden-sm col-xs-4">
          <%= link_to image_tag('site-kmimos-12.png', class: "mt--14"), root_url %>
        </div>
        <div class=" p-7 hidden-md hidden-lg col-xs-4">
          <%= link_to image_tag('site-kmimos-12.png', class: "mt-0"), root_url %>
        </div>
      </div>
      <div class="collapse navbar-collapse">
        <ul class="nav navbar-nav pull-right">
        <% if current_provider %>
              <li class="dropdown mt-7">
                <a href="#" class="dropdown-toggle text-muted" data-toggle="dropdown">Hola, <%= current_provider.name %> <i class="fa-caret-down"></i></a>
                <ul class="dropdown-menu">
                  <li><%= link_to '<i class="fa-edit"></i> Actualizar mi perfil'.html_safe, edit_provider_path(current_provider) %></li>
                  <li><%= link_to '<i class="fa-power-off"></i> Salir'.html_safe, salir_path, :method => :delete, class: "text-danger" %></li>
                </ul>
              </li>
          <% else %>    
          <li class="active">
           <%= link_to 'Ingresa a tu cuenta'.html_safe, new_providers_session_path, class: "not-underline" %>
          </li>
          <% end %>   
        </ul>
      </div>
      <!--/.nav-collapse -->
    </div>
    <div class="row">
      <div class="col-md-8"></div>
      <div class="col-md-3">
        <div class="opciones mt-7 mb-42 p-14">
          <div class="row">
            <div class="text col-md-12 text-center">
              <h3 class="hidden-sm hidden-xs mt-7">Consiente a tu <strong>mascota</strong></h3>
              <h3 class="hidden-md hidden-lg mt-7">Consiente a tu <strong>mascota</strong></h3>
              <p class="pb-14">Conéctate con gente de confianza para consentir a tu mascota como se merece.</p>
            </div>
          </div>
          <div class="servicios row text-center">
            <div class="col-md-6 ">
              <%= link_to(category_path(Category.find_by(name: "Veterinario"))) do %>
                <%= image_tag("site-kmimos-05.png", :class => "" ) %>
                <div class="overlay">
                </div>
              <% end %>
            </div>
            <div class="col-md-6">
              <%= link_to(category_path(Category.find_by(name: "Paseador"))) do %>
                <%= image_tag("site-kmimos-07.png", :class => "" ) %>
                <div class="overlay">
                </div>
              <% end %>
            </div>
          </div>
          <div class="servicios row text-center mt-14">
            <div class="col-md-6">
              <%= link_to(category_path(Category.find_by(name: "Hotel"))) do %>
                <%= image_tag("site-kmimos-06.png", :class => "" ) %>
                <div class="overlay">
                </div>
              <% end %>
            </div>
            <div class="col-md-6">
              <%= link_to(category_path(Category.find_by(name: "Entrenador"))) do %>
                <%= image_tag("site-kmimos-08.png", :class => "" ) %>
                <div class="overlay">
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<section id="home-pasos" class="text-center bg-muted">
  <div class="container text-center">
    <div class="row" id="pasos"> 
      <div class="col-md-2 col-xs-2"></div>
      <div class="col-md-8 text-center" id="line">
        <ul class="list-unstyled">
          <li class="pasos-1 pull-left p-14 relative">
            <h2 class="pb-14">1</h2>
            <%=image_tag('site-kmimos-09.png', class: "mt--14") %>
          </li>
          <li class="pasos-2 pull-left p-14 relative">
            <h2 class="pb-14">2</h2>
            <%=image_tag('site-kmimos-10.png', class: "mt--14") %>
