.container.content.mh-630.mb-70
  .row.mt-35
    .col-md-2
    .col-md-8
      %h3.text-align-center SÃ© parte de Kmimos 
      .panel.panel-primary
        .panel-heading.mb-21.text-gray.text-align-center
          Para registrarte como cuidado de Kmimos, llena este formulario y nos pondremos en contacto contigo.
        .panel-body 
          = simple_nested_form_for(@provider, :html => {:multipart => true}) do |f|  
            .registration_wizard
              = render partial: 'step1', locals: {f: f}
              = render partial: 'step2', locals: {f: f}
              = render partial: 'step3', locals: {f: f} 
            = render partial: 'terms', locals: {f: f}

:javascript

  

  var make_wizard = function () {
    $(".registration_wizard").steps({
        headerTag: "h3",
        bodyTag: "section",
        transitionEffect: "slideLeft",
        autoFocus: true,
        labels: {  
                finish: "Registrarme",
                next: "Continuar",
                previous: "Anterior" 
            },
        onFinished: function () { 
          $('#myModal').modal(); 
          _gaq.push(['_trackEvent', 'Homepage', 'Recomendar-modal-trigger']);
        }
    });
  };
  
  paint_map();
  
  
  setTimeout(function(){ make_wizard(); }, 3000);