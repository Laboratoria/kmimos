#cuidadores(ng-if="providers != undefined")
  .provider-item(ng-repeat="provider in ($parent.filteredProviders = (providers | searchProvider: search | orderBy : '-valuation')) ")
    .block-cuidadores
      %a(href="/providers/{{provider.id}}")
        .bg-img-block.border-radius.square-green(style = "height: 150px; background-image: url('{{provider.avatar}}');")
          .oculto.text-center.pt-21
            %img{:alt => "", :src => "assets/icono-huella-hover.svg", :width => "70"}
        .bg-gray-lighter.p-14
          .body.border-bottom.body-provider
            %small.fz-xs Desde
            %div(ng-if="provider.isFavorite"){style: "float: right;"}
              %img{:alt => "", :src => "assets/cuidador_wow.png", :width => "70"}
            %h4.text-primary.lh-xs.mv-0 Mex ${{provider.price}}
            %small.text-primary.fz-xs por noche
            %h5.bold {{ provider.name }}
            %h6
              %small(ng-repeat="state in provider.states ") {{ state }}
            %p.lh-sm.text-gray.fz-xs {{ provider.description | limitTo: 200 }}
            .hidden-md.separator.separator-gray-dark.separator-centered.mt-0.separator-full-width
      .rating.bg-gray-lighter
        .row  
          %raty.col-md-6(score="{{provider.valuation}}" readOnly= true)
          .comments.col-md-6{style: "float:right;margin-top:-15px"}
            %span.badge{style:"display:inline"} {{ provider.comments.length }}
            %a{style:"display:inline"}(href="/providers/{{provider.id}}/#comentarios_kmimos")
              %span{style:"display:inline"} Comentarios
#waiting-screen(ng-if="providers == undefined")
  %center
    %br
    %h3 ... Cargando Cuidadores ... 

