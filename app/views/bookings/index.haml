.reservas
  %h1 Mis reservas
  - if @bookings.count == 0
    %h2 No hay reservas registradas
  - else
    .row.seven-cols.header
      .col-md-1 Fecha
      .col-md-1 Cuidador
      .col-md-1 Estadia
      .col-md-1 Servicio
      .col-md-1 Precio Total
      .col-md-1 Calificacion del Cuidador
      .col-md-1 Reserva
    - @bookings.each do |book|
      .row.seven-cols.line
        .col-md-1 
          %p
            %b Check in
            = book.start_date
          %p
            %b Check out
            = book.end_date 
        .col-md-1
          %b="#{book.provider.name} #{book.provider.last_name_1}"
        .col-md-1
          =" Del #{book.start_date} al #{book.end_date}"
        .col-md-1
          = book.booked_services.map{|bs| bs.service}.join(' ,')
        .col-md-1{style:"font-weight: bold;color: #435C70;line-height: 17px;"}
          %b$
          %b= book.total
        .col-md-1
          - val = Valuation.by_comments(book.provider.id)
          - score = val.map{|val| val[1]}.reduce(:+).to_i / val.size.to_i rescue 0
          .ratingStars{score: score, readOnly: true}          
        .col-md-1
          %a{href: request.protocol + request.host + "/bookings/booking_resume/#{book.id}.pdf"} Ver Reserva
    - @bookings.each do |book|
      .row.visible-xs.visible-sm.reserva
        .col-xs-12
          %label Cuidador:
          ="#{book.provider.name} #{book.provider.last_name_1}"
          %br
          %label Check in:
          ="#{book.start_date}"
          %br
          %label Check out:
          ="#{book.end_date}"
          %br
          %label Servicios:
          = book.booked_services.map{|bs| bs.service}.join(' ,')
          %br
          %label Precio:
          %b$
          %b= book.total
          %br
